
.address{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #dcdcdc;
  padding: 10px 15px;
  font-size:16px;
  font-family:'PingFangSC-Semibold';
  color:rgba(51,51,51,1);
  line-height:20px;
  position: relative;
}
.address:first-child {
  border-top: 1px solid #dcdcdc;
}
.address-same {
  padding-right: 5px;
}
.address-address {
  font-weight: 400;
  font-family: 'PingFangSC-Regular';
  font-size: 14px;
  color: rgba(102,102,102);
  padding-top: 5px;
}
.address-default {
  color: red;
  padding-left: 5px;
}
.address-editor {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
}
.toAdd {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}