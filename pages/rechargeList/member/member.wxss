/* pages/member/rechargePay/rechargePay.wxss */
.member {
    border-top: 1px solid #f5f5f5;
    padding: 6vw;
}
.member-item {
    border-bottom: 1px solid #f5f5f5;
}
.member-item-content {
  overflow: hidden;
}
.itemLeft {
  width: 16vw;
  height: 16vw;
  padding-right: 3vw;
}
.itemRight {
  width: 69vw;
}
.itemRight > text {
  display: block;
  width: 100%;
  color: #333;
  font-size: 4vw;
  line-height: 4vh;
}
.itemRight > text:first-child {
  font-weight: 600;
  font-size: 5vw;
  line-height: 5vh;
}
.itemRight > text:nth-child(2) {
  color: rgba(102, 102, 102, 1);
  font-size: 3.5vw;
  
}
.member-item-btn {
  overflow: hidden;
  position: relative;
  height: 6vh;
  line-height: 6vh;
  margin-bottom: 2vh;
}
.member-item-btn button {
  width: 25vw;
  font-size: 4vw;
  height: 5vh;
  line-height: 5vh;
  text-align: center;
  background: #ff9900;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
}