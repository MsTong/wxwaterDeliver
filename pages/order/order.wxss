.container {
  background:rgba(255,255,255,1);
  font-family:'PingFangSC-Regular';
  font-weight:400;
}
.order {
  width: 100vw;
  display: flex;
  flex-direction: column;
}
.order-header {
  width:100vw;
  display: flex;
  flex-direction: row;
  flex: 0 0 6.6vh;
  border-bottom:1vw solid #F5F5F5;
}
.order-header-item {
  flex: 1;
  text-align: center;
  align-items: center;
}
.order-header-item text{
  text-align: center;
  align-items: center;
  height:3vh;
 font-size:3.5vw;
 color:rgba(51,51,51,1);
}
.order-content {
  background: #fff;
  border-bottom: 2px solid #F5F5F5;
}
.order-content-item {
  width:90vw;
  padding:0 5vw;
  display: block;
}
.order-content-item-title{
  padding-top: 1vh;
  height: 6vh;
  line-height: 6vh;
  font-size:4vw;
  font-family:'PingFangSC-Semibold';
  font-weight:600;
}
.order-content-item-title text:last-child {
  float: right;
  color: #F3344A;
  font-family:'PingFangSC-Regular';
  font-weight:400;
}
.order-content-item-info {
  overflow: hidden;
  position: relative;
}
.img {
  float: left;
  width: 24vw;
  height: 24vw;
}
.info {
  float: left;
  padding-left: 2vw;
}
.orderType {
  font-size:5vw;
  font-family:'PingFangSC-Regular';
  font-weight:400;
  color:rgba(51,51,51,1);
  position: relative;
  top: 2vh;
}
.count {
  position: absolute;
  right: 0;
  top: 2vh;
  font-family:'PingFangSC-Regular';
  font-weight:400;
}
.allPrice {
  position: absolute;
  right: 0;
  bottom: 2vh;
  font-size: 3.8vw;
}
.allPrice-num {
  font-size: 4.5vw;
}
.order-content-btns {
  width: 100%;
  margin-bottom: 2.3vh;
  overflow: hidden;
}
.order-content-btns button {
  float: right;
  height: 4vh;
  width: 21vw;
  line-height: 4vh;
  text-align: center;
  font-size: 3.2vw;
  /* border: 1px solid rgba(221,221,221,1); */
  border: 1px solid #000;
  outline: none;
  margin: 0;
  padding: 0;
  border-radius: 2vh;
  background: #fff;
  color: rgba(102,102,102,1);
  margin-left: 2vw;
}