/* pages/order/scan/scan.wxss */
.scan {
  color:#fff;
  text-align: center;
  margin-top: 15vh;
}
.top {
  width: 70vw;
  height: 10vh;
  line-height: 10vh;
  border-radius: 5px;
  background: #ff9900;
  margin: 10vh auto;
}
.content {
  background: red;
  width: 40vw;
  height: 15vh;
  margin: 10vh auto;
}
.content image {
  width: 100%;
  height: 100%;
}
.footer {
  width: 70vw;
  background: red;
  margin: 5vh auto;
  height: 10vh;
  line-height: 10vh;
  border-radius: 5px;
}