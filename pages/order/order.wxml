<view class="container">
  <view class="order">
    <!-- <view class='order-header'> -->
    <i-tabs current="{{ current }}" bindchange="handleChange">
      <i-tab key="0" title="全部"></i-tab>
      <i-tab key="1" title="待配送"></i-tab>
      <i-tab key="2" title="配送中"></i-tab>
      <i-tab key="3" title="已完成"></i-tab>
    </i-tabs>
    <!-- </view> -->
    <view class='order-content' wx:for='{{ orderList }}' wx:key='{{ index }}' bindtap='toDetail'>
      <view class='order-content-item'>
        <view class='order-content-item-title'>
          <text>订单号：{{ item.orderNo }}</text>
          <text>{{ item.orderStatus }}</text>
          <text wx:if='{{item.orderStatus==1}}'>待配送</text>
          <text wx:if='{{item.orderStatus==2}}'>配送中</text>
          <text wx:if='{{item.orderStatus==3}}'>交易成功</text>
        </view>
        <view class='order-content-item-info'>
          <view class='img'>
            <image style='width:70px;height:70px' src='/images/icon/water.png'></image>
          </view>
          <view class='info'>
            <text class='orderType'>{{ item.orderType }}</text>
            <text class='count'>x{{ item.count }}</text>
          </view>
        </view>
        <view class='order-content-item-btn'>
          <view class='f-l leftInfo'>
          <view>
            <text>配送时间：{{ item.sendTime }}</text>
          </view>
           <view class='orderStatus' wx:if='{{ item.orderStatus==3 }}'>
            <text>空桶回收：</text><text class='redFont'>空桶已回收{{ item.barrelCount }}个</text>
           </view>
          </view>
          <view class='f-r optionBtn'>
            <button class='optionBtn' wx:if='{{ item.orderStatus==1 }}' bindtap='handleDeliver'>马上配送</button>
            <button class='optionBtn' wx:if='{{ item.orderStatus==3 }}' bindtap='toOrderDetail'>详情</button>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<i-toast id="toast" />