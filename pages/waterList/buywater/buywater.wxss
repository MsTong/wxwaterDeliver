.waters {
  border-top: 1px solid #f5f5f5;
  width: 100%;
  color: #333;
}
.waters-top-noaddress {
  padding-left: 15px;
  font-size:16px;
  font-family:'PingFangSC-Semibold';
   line-height: 20px;
  height: 20px;
  color: #19b161;
}
.waters-top-address {
font-size:16px;
font-family:'PingFangSC-Semibold';
font-weight:600;
color:rgba(51,51,51,1);
line-height:20px;
padding-left: 15px;
position: relative;
}
.waters-top-address-name text:first-child {
  padding-right: 10px;
}
.waters-top-address-address {
  font-size:12px;
  font-family:'PingFangSC-Regula'r;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-top: 10px;
}
.waters-top-address-enter {
  position: absolute;
  right: 15px;
  top: 50%;
  width:15px;
  height: 15px;
  transform:translate(0,-50%);
}
waters-top-address
.icon-item{
    display: block;
    padding: 16px 0;
    width: 33.33%;
    float: left;
    text-align: center;
}
.icon-item-name{
    font-size: 10px;
}
.waters-top-line {
  width: 100%;
  height: 3px;
}
.waters-content-item {
  width: 92%;
  margin: 10px auto;
  /* height: 120px; */
  position: relative;
  border-bottom: 1px solid #f5f5f5;
  padding: 2vh 0; 
}
.waters-content-left {
  overflow: hidden;
}
.waters-content-left image {
  width: 20vw;
  height: 20vw;
  float: left;
}
.waters-content-left-info {
  width: 56%;
  float: left;
  padding-left: 4%;
}
.waters-content-left-info > text {
  display: block;
  padding-bottom: 5px;
  font-size: 4.5vw;
}
.waters-content-left-info>text:nth-child(2) {
  color: rgba(102,102,102,1);
  font-size: 3.5vw;
}
.waters-content-left-info>text:last-child {
  font-size: 4vw;
  color: red;
}
.waters-content-right {
  width: 100%;
  position: relative;
  height: 10vh;
  line-height: 10vh;
}
 .waters-content-right-input{
    position: absolute;
    bottom: 0;
    right: 0;
 }
.waters-content-right-input {
  padding-left: 16px;
}
.waters-footer {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}
.waters-content-payInfo {
  padding: 0 3vw;
}
.waters-content-addressInfo {
  border-top: 1px solid #f5f5f5;
  padding: 2vh 7vw;
  font-size: 4vw;
  line-height: 6vh;
  height: 6vh;
  font-weight: 500;
}
.deliverDate {
  width: 100%;
  height: 6vh;
  line-height: 6vh;
}
.picker {
  width: 100%;
}